# Telegram
TELEGRAM_BOT_TOKEN=

# Telegram message chunking
MAX_TELEGRAM_MESSAGE_LENGTH=3500

# yt-dlp options (optional)
YT_DLP_ADDITIONAL_OPTIONS=

# Valkey Cache (optional)
# If not set, local cache is used with 1 hour TTL
# If set, Valkey cache is used with 1 day TTL
VALKEY_URL=

# TTL for cached transcripts
CACHE_TRANSCRIPT_TTL_SECONDS=86400

# TTL for cached summaries
CACHE_SUMMARY_TTL_SECONDS=86400

# Cache Compression (Valkey only)
# Options: none, gzip, zlib, lzma
# Default: gzip (recommended balance of speed and compression)
CACHE_COMPRESSION_METHOD=gzip

# Rate limiting
RATE_LIMIT_WINDOW_SECONDS=10

# OpenAI-compatible API
OPENAI_BASE_URL=https://api.openai.com/v1/
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
# OPENAI_TIMEOUT_SECONDS=300
# OPENAI_MAX_RETRIES=3

# Logging
LOG_LEVEL=INFO
