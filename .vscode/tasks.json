{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "mvn: build",
      "type": "shell",
      "command": "mvn",
      "args": ["clean", "package"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$mavenProblemMatcher"]
    },
    {
      "label": "mvn: run",
      "type": "shell",
      "command": "mvn",
      "args": ["exec:java", "-Dexec.mainClass=\"com.example.Main\""],
      "group": {
        "kind": "run",
        "isDefault": true
      },
      "problemMatcher": ["$mavenProblemMatcher"],
      "dependsOn": ["Package Project"]
    },
    {
      "label": "mvn: test",
      "type": "shell",
      "command": "mvn",
      "args": ["clean", "test"],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": ["$mavenProblemMatcher"]
    },
    {
      "label": "mvn: clean",
      "type": "shell",
      "command": "mvn",
      "args": ["clean"],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": ["$mavenProblemMatcher"],
      "presentation": {
        "reveal": "always"
      }
    }
  ]
}
